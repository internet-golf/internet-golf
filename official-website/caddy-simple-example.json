{
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [":443"],
          "routes": [
            {
              "match": [{ "host": ["audio.mitch.com.net.biz.org.zone.place"] }],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "vars",
                          "root": "/root/my-documents/standalone-content/audio/"
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "handler": "headers",
                          "response": { "set": { "Cache-Control": ["max-age=0,no-store"] } }
                        }
                      ],
                      "match": [{ "path": ["*/"] }]
                    },
                    {
                      "handle": [
                        {
                          "encodings": { "gzip": {}, "zstd": {} },
                          "handler": "encode",
                          "prefer": ["zstd", "gzip"]
                        },
                        { "browse": {}, "handler": "file_server", "hide": [".\\Caddyfile"] }
                      ]
                    }
                  ]
                }
              ],
              "terminal": true
            }
          ]
        }
      }
    }
  }
}
